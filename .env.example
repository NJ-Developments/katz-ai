# ===========================================
# KatzAI Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/katzai

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d

# API Server
API_PORT=3001
API_HOST=0.0.0.0

# LLM Provider (anthropic | openai)
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Fallback OpenAI (if using openai provider)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Transcription Provider (whisper | deepgram)
TRANSCRIPTION_PROVIDER=whisper
# Uses OPENAI_API_KEY for Whisper
DEEPGRAM_API_KEY=your-deepgram-key-here

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info

# Admin Dashboard
NEXT_PUBLIC_API_URL=http://localhost:3001

# Mobile App
EXPO_PUBLIC_API_URL=http://localhost:3001

# Optional: pgvector for semantic search
ENABLE_VECTOR_SEARCH=false
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
